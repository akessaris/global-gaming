extends layout

block append content
  .container
    form.form-signin(role='form', action="/register",method="post", style='max-width: 300px;')
      h2.form-signin-heading Sign Up
      input.form-control(type='text', name="firstName", placeholder='First Name')
      input.form-control(type='text', name="lastName", placeholder='Last Name')
      input.form-control(type='email', name="email", placeholder='Email')
      input.form-control(type='text', name="username", placeholder='Username')
      input.form-control(type='password', name="password", placeholder='Password')
      br
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
